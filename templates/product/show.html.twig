<div class="example-wrapper">
    <h1>Detalle del producto</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">ID: {{ product.id }}</h5>
            <h5 class="card-title">Código: {{ product.code }}</h5>
            <h5 class="card-title">Nombre: {{ product.name }}</h5>
            <h5 class="card-title">Descripción: {{ product.description }}</h5>
            <h5 class="card-title">Marca: {{ product.brand }}</h5>
            <h5 class="card-title">Precio: {{ product.price }}</h5>
            <h5 class="card-title">Categoría: {{ product.category.name }}</h5>
        </div>
    </div>
        
    <div class="text-center mt-2">
        <a class="btn btn-secondary"  href="{{ path('product') }}">&#8592; Listar Productos</a>
    </div>

</div>
{% endblock %}
