<div class="example-wrapper">
    <h1>Productos</h1>
    
    <div class="row mb-2 mt-2">
        <div class="col">
            <a class="btn btn-success"href="{{ path('product_create') }}">Crear Producto</a>
        </div>
        <div class="col text-right">
            <form action="{{ path('product') }}" method="get">
                <label for="filter">Filtro:</label>
                <input name="filter" placeholder="Nombre" type="text">
                <button type="submit" class="btn btn-info">Filtrar/Limpiar</button>
            </form>
        </div>
    </div>
    <hr>
    <table class="table" id="product-table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Código</th>
            <th scope="col">Nombre</th>
            <th scope="col">Description</th>
            <th scope="col">Marca</th>
            <th scope="col">Precio</th>
            <th scope="col">Categoria</th>
            <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
            <th scope="row">{{ product.id }}</th>
            <td>{{ product.code }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.brand }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.category.name }}</td>
            <td>
                <a href="{{ path('product_show', {'id': product.id }) }}" class="btn btn-success">Detalles</a>
                <a href="{{ path('product_edit', {'id': product.id }) }}" class="btn btn-warning">Editar</a>
                <a href="{{ path('product_delete', {'id': product.id }) }}" class="btn btn-danger" onclick="return confirm('¿Realmente desea borrar este elemento?')">Borrar</a>
            </td>
            </tr>
            {% else %}
                <p>No hay registros</p>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
